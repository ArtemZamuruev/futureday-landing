.menu
	font 400 14px/25px kelson
	letter-spacing: 0.04em

	&__item
		padding 0 15px
		padding 0 1vw
		display inline-block

	&__link
		cursor pointer
		text-transform uppercase
		color inherit
		text-decoration none
		padding-bottom 5px
		border-bottom 4px solid transparent
		transition-property: all
		transition-duration: t-dur
		transition-timing-function: t-bezier

		&.-js-selected
			border-bottom 4px solid c-pink
			color c-pink

		&:hover
			color #ffffff
