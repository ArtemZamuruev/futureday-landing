.advantages
	&__header
		color c-yellow
		font 700 46px/68px bebas
		text-transform uppercase
		position relative
		z-index 3

	&__items
		margin 41px auto
		position relative

	&__item
		position relative
		overflow hidden

		@media (max-width r-smallbook)
			&:nth-child(1)
				z-index 4

		p
			margin-bottom 25px

	&__image
		font-size 0
		line-height 0
		position relative

		img
			position relative


	&__item
		&:nth-child(1)
			max-width 700px
			.advantages
				&__box
					float left

				&__content
					float left
					width 285px
					margin-left 60px
					margin-top 14px

				&__images
				&__content
					float left

				&__header
					margin-left 75px
					margin-bottom -35px
				&__image
					&:nth-child(2)
						margin -78px 0 0 85px
						&:before
							content ""
							display block
							width 164px
							height 134px
							border 9px solid #fff
							position absolute
							top -9px
							left -9px

					&:nth-child(3)
						margin -52px 0 0 0

		&:nth-child(2)
			margin-left 228px
			position relative
			.advantages
				&__image
					display inline-block
					&:before
						content ""
						display block
						width 134px
						height 57px
						border-top 9px solid #fff
						border-right 9px solid #fff
						position absolute
						top -9px
						right -9px
				&__box
					overflow hidden
					padding-top 9px
				&__header
					position absolute
					top 68px
					left 125px
				&__content
					width 200px
					margin -46px 0 0 130px
					position relative

		&:nth-child(3)
			position absolute
			right 0
			top 0

			.advantages
				&__content
					max-width 245px

				&__header
					margin 84px 0 0 126px

				&__content
					margin-left 126px
					position relative

				&__image
					&:nth-child(1)
						margin 91px 133px 0 9px

						&:before
							content ""
							width 102px
							height 99px
							display block
							position absolute
							bottom -9px
							left -9px
							border 9px solid #fff

					&:nth-child(2)
						margin -303px 0 0 152px

						img
							border 6px solid #fff

	@media (max-width r-mobile)
		&__items
			margin-left -52px

		&__container
			padding-bottom 35px !important

		&__item
			&:nth-child(1)
				.advantages
					&__header
						margin-left 53px
						margin-bottom -38px

					&__content
						margin-left 38px
						width 313px

					&__image
						&:nth-child(2)
							margin -78px 0 0 62px

							&:before
								width 124px
								height 104px

							img
								width 173px
								height 173px

						&:nth-child(3)
							margin -24px 0 0 31px

							img
								width 100px
								height 97px

			&:nth-child(2)
				margin-left 0
				margin-top 80px

				.advantages
					&__header
						left 270px
						top 30px

					&__content
						position absolute
						left 270px
						width auto
						right 52px
						margin 0
						top 90px

			&:nth-child(3)
				position static

				.advantages
					&__header
						margin 50px 0 0 272px

					&__content
						margin-left 272px
						max-width none
					&__box
						float left
					&__image
						&:nth-child(1)
							margin 70px 0 0 22px

							&:before
								bottom auto
								top -9px

							img
								width 191px
								height 192px

						&:nth-child(2)
							margin -75px 0 0 110px
