.contacts
	padding-bottom 66px

	&__formWrap
		position relative

	&__form
		position relative
		transition: all t-dur t-bezier

		&.-hidden
			opacity 0

	&__success
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display flex
		align-items: center
		justify-content: center
		color #7c7c7b
		font 30px/37px 'PT Sans'
		opacity 0
		transition: all t-dur t-bezier

		&.-visible
			opacity 1

	&__header
		font 36px/40px kelson
		text-transform uppercase
		color c-pink
		text-align: center;
		margin-top 55px
		margin-bottom 17px

	&__label
		max-width 550px
		margin 0 auto 63px
		text-align: center;

	&__rules
		text-align center
		color #818181
		font 14px/20px 'PT Sans'
		margin-top 30px

		b
			color #c6c6c6

	&__more
		font 700 18px/31px kelson
		text-transform uppercase
		max-width 410px
		text-align center
		margin 108px auto 0

	&__add
		display flex
		margin-top 52px
		align-items: center;
		justify-content: center;

	&__item
		margin 0 10px

		&--type
			&_name
				color c-yellow

			&_phone
				span
					color #838383

			&_mail
				a
					color #fff
					text-decoration: none
