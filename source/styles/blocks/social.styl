.social
	&__link
		display block
		width 20px
		height 20px
		color #fff
		transition-property: all
		transition-duration: t-dur
		transition-timing-function: t-bezier
		opacity .6

		svg
			width 100%
			height 100%
			fill currentColor

		&:hover
			opacity 1


	&__item
		float left
		margin-left 15px
