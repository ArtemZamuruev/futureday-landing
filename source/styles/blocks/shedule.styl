.shedule
	padding-bottom 20px
	&__table
		width 80%
		float left
		box-sizing border-box
		padding-right 72px

	&__extend
		width 20%
		float left
		margin-left -8px

	&__header
		font 30px/39px kelson
		text-transform uppercase
		letter-spacing 0
		text-align center
		margin-top 63px

		span
			color c-pink

	&__content
		margin 0 auto
		overflow hidden

	&__icon
		height 102px
		display flex
		vertical-align: middle
		justify-content: center
		margin-bottom 20px

		&-back
			position absolute

		&-wrap
			width 227px
			margin 0 30px

			&:nth-child(1)
				.shedule
					&__icon
						&-back
							width 60px
							height 15px
							background-color c-pink
							position absolute
							top 50%
							left 50%
							transform rotate(-30deg) translate(-10px, -30px)

			&:nth-child(2)
				.shedule
					&__icon
						&-back
							width 32px
							height 32px
							border-radius 50%
							top 50%
							left 50%
							margin -46px 0 0 -31px
							border 22px solid c-pink

			&:nth-child(3)
				.shedule
					&__icon
						&-back
							width 97px
							height 35px
							top 50%
							left 50%
							background-color c-pink
							border-radius 50%
							margin -20px 0 0 -40px

		&-front
			fill: #fff
			display flex
			align-items: center
			position relative

			svg
				position relative
				z-index 3

	&__icons
		display flex
		justify-content center
		margin-top 75px
		margin-bottom 80px

	&__label
		text-align center

		span
			color c-pink

	@media (max-width r-smallbook)
		&__table
			width 70%

		&__extend
			width 30%

	@media (max-width r-mobile)
		&__icons
			flex-direction: column;

		&__extend
			display none

		&__table
			width 100%
			padding-right 0

		&__label
			max-width 300px
			margin 40px auto 0

		&__icon
			&-wrap
				width 100%
				margin 0 0 80px


				&:nth-child(1)
					.shedule
						&__icon
							&-front
								svg
									width 132px
									height 143px

							&-back
								transform: rotate(-30deg) translate(-21px, -46px)
								width 98px
								height 20px

				&:nth-child(2)
					.shedule
						&__icon
							&-front
								svg
									width 136px
									height 141px

							&-back
								width 48px
								height 48px
								border-width: 38px
								margin -72px 0 0 -50px

				&:nth-child(3)
					.shedule
						&__icon
							&-front
								svg
									width 164px
									height 109px

							&-back
								width 150px
								height 55px
								margin -31px 0 0 -60px
