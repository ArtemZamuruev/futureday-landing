.extend
	&__separator
		width 27px
		height 8px
		background-color: #fff
		margin 26px 0

	&__header
		color: c-white
		font-family: kelson;
		font-size: 18px;
		line-height: 27px;
		text-transform: uppercase;
		margin-bottom 20px

	&__name
		color c-yellow
		font-weight: 200
		font 200 36px/40px bebas
		letter-spacing: 0
		text-transform uppercase
		position relative
		display inline-block

	&__bold
		font-weight 700

	&__zone
		position absolute
		left 100%
		top 0
		color: #a8a8a8
		opacity 0.3
		font-family bebas
		font-weight: 700
		font-size 18px
		line-height 21px
		letter-spacing: 0.010em
		margin-left 2px

	&__item
		margin-bottom 25px

	&__label
		font-size 14px
		line-height 17px
