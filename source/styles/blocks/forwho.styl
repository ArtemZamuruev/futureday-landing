.forwho
	margin-bottom 88px
	&__wrap
		margin 58px auto
		height 100%

	&__icon
		position absolute
		top 0
		left -210px
		width 300px
		height 100%
		opacity .4

		svg
			display block
			fill #1c283f
			stroke #1c283f

			*
				fill #1c283f
				stroke #1c283f

	&__content
		height 760px
		box-sizing border-box
		overflow hidden

	&__main
		float left
		height 584px
		max-width 653px
		width 100%
		position relative

		&-item
			width 100%
			height 100%
			display flex
			flex-direction column
			justify-content center
			margin-left 210px
			box-sizing border-box
			position absolute
			transform translate(0,100%)
			opacity 0
			transition-property: all
			transition-duration: t-dur
			transition-timing-function: t-bezier

			@media (max-width r-smallbook)
				margin-left 0

			&.-js-active
				transform translate(0,0)
				opacity 1

			&.-js-out
				transform translate(0, -100%)

	&__label
		font 700 18px/21px kelson
		text-transform uppercase
		position relative

	&__header
		margin 15px 0 30px
		position relative
		span
			font 700 104px/102px bebas
			border-bottom 10px solid c-yellow
			color c-yellow

	&__text
		font 18px/26px 'PT Sans'
		position relative

	&__menu
		float right
		height 100%
		width 216px
		display flex
		flex-direction column
		justify-content center

		&-item
			margin 20px 0
			font 18px/21px kelson
			letter-spacing 0.08em
			text-transform uppercase
			cursor pointer

			&.-js-active
				opacity .4

	@media (max-width r-mobile)
		margin-bottom 0
		&__menu
			display none

		&__main
			height 457px
			float: none;
			&-item
				padding-left 90px

		&__icon
			top -37px
			left -65px

		&__content
			height auto
			padding-bottom 55px !important

		&__wrap
			margin-bottom 0
