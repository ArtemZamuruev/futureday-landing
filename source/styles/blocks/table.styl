.table
	color c-white
	font 18px/21px 'PT Sans'
	&__wrap
		display flex

	&__cell
		height 58px
		display flex
		align-items: center;

		&:nth-child(odd)
			background-color rgba(255,255,255, .06)

		&-min
			font-weight: 200
			vertical-align: sub;
			font-size: 12px
			margin-top -8px

		&-sep
			font-weight: 200

	&__row
		&:nth-child(1)
			font-family: bebas
			font-weight: 700
			letter-spacing: 0.16em
			width 135px
			border 1px solid #393638

		.table
			&__cell
				justify-content: center;

	&__row
		&:nth-child(2)
			font-family: bebas
			font-weight: 700
			letter-spacing: 0.16em
			width 82px
			text-transform uppercase

			.table
				&__cell
					justify-content: center;

	&__row
		&:nth-child(3)
			.table
				&__cell
					padding 0 27px 0 0
					justify-content: flex-start;

	@media (max-width r-smallbook)
		&__row
			&:nth-child(3)
				font-size 14px
