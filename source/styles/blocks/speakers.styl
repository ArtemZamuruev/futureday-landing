.speakers
	position relative
	height 842px

	&__content
		position relative
		height 100%
		clearfix()

	&__items
		margin-bottom 61px

	&__container
		padding-top 48px
		position absolute
		left 50%
		margin-left 80px

	&__header
		font 30px/39px kelson
		text-transform uppercase
		letter-spacing 0
		max-width 390px
		margin-bottom 25px

	&__desc
		max-width 352px
		font-size 16px
		line-height 24px

	@media (max-width r-smallbook)
		height 702px

		&__container
			margin-left 40px

	@media (max-width r-tablet)
		height auto

		&__container
			position static
			margin 0
			padding-top 36px

		&__header
		&__desc
			max-width 100%

		&__header
			margin-right 60px
			line-height 41px

		&__desc
			font-size: 24px
			line-height 34px
			margin-bottom 73px

		&__items
			margin 0 -52px

	@media (max-width r-mobile)
		&__content
			padding-bottom 56px
